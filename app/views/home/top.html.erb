<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">バスケコート検索サイト</h1>
      <p class="lead text-muted">このサイトはバスケのコートを検索するサイトです</p>
    </div>
  </section>

  <ul class="list-group list-group-flush">
    <div class="container">
      <div class="row">
        <% @courts.each do |court| %>
          <div class="col-md-12">
            <div class="card mb-12 shadow-sm">
              <div class="card-body">
                <p class="card-text">
                  <%= court.court_name %>
                </p>
                <p class="card-description">
                  <%= court.station %>
                </p>
                <div class="d-flex justify-content-end align-items-center">
                  <small class="text-muted">東京都品川区</small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </ul>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @courts.each do |court| %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <%= image_tag 'gray_color.png', height: "225px" %>
              <div class="card-body">
                <p class="card-text">
                  <%= court.court_name %>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                  </div>
                  <small class="text-muted">9 mins</small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</main>
