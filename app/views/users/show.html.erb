<p id="notice"><%= notice %></p>

<div class="mx-auto" style="width: 200px;">
  <p>
    <strong>マイページ</strong>
  </p>
</div>

<div class="mx-auto" style="width: 200px;">
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>
</div>

<div class="mx-auto" style="width: 200px;">
  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
</div>

<div class="mx-auto" style="width: 200px;">
  <p>
    <strong>Password:</strong>
    <%= @user.password %>
  </p>
</div>

<div class="mx-auto" style="width: 200px;">
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>

<div class="mx-auto" style="width: 200px;">
  <p>
    <strong>お気に入り一覧</strong>
  </p>
</div>

<ul class="list-group list-group-flush">
  <div class="container">
    <div class="row">
      <% @favorites.each do |favorite| %>
        <% court = Court.find_by(id: favorite.court_id)%>
        <div class="col-md-12">
          <div class="card mb-12 shadow-sm">
            <div class="card-body">
              <p class="card-text">
                <%= court.court_name %>
              </p>
              <p class="card-description">
                <%= "最寄り駅: #{court.station}" %>
              </p>
              <%= link_to("/favorites/#{court.id}/destroy", {method: "post"}) do %>
                <button type="button" class="btn btn-outline-primary"><i class="fas fa-star"></i></button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</ul>